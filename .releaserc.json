{
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    [
      "semantic-release-major-tag",
      {
        "customTags": ["v${major}", "v${major}.${minor}"]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/bicep-docs-x86_64-unknown-linux-gnu/bicep-docs",
            "name": "bicep-docs-linux-amd64",
            "label": "bicep-docs-${nextRelease}-linux-amd64"
          },
          {
            "path": "dist/bicep-docs-x86_64-pc-windows-msvc/bicep-docs.exe",
            "name": "bicep-docs-windows-amd64",
            "label": "bicep-docs-${nextRelease}-windows-amd64"
          },
          {
            "path": "dist/bicep-docs-aarch64-apple-darwin/bicep-docs",
            "name": "bicep-docs-macos-arm64",
            "label": "bicep-docs-${nextRelease}-macos-arm64"
          },
          {
            "path": "dist/SHA256SUMS.txt",
            "label": "SHA256SUMS"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.adoc",
          "package.json",
          "package-lock.json"
        ]
      }
    ]
  ]
}
